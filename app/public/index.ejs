<!DOCTYPE html>
<html>
    <head>
    	<meta charset="utf-8">
	    <meta http-equiv="X-UA-Compatible" content="IE=edge">
	    <meta name="viewport" content="width=device-width, initial-scale=1">
	    
	    <title>{{ info.name }}:{{ info.version }}</title>

	    <!-- Bootstrap -->

	    <!-- build:css -->
	    <link href="vender/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
	    <link rel='stylesheet' href='stylesheets/sticky-footer.css' />    	
    	<link rel='stylesheet' href='stylesheets/style.css' /> 
    	<!-- endbuild -->

	    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
	    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
	    <!--[if lt IE 9]>
	      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
	      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
	    <![endif]-->

    </head>
    <body ng-controller="appCtrl as app">
    <!-- Fixed navbar -->
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
	        <div class="navbar-header">		          
		          <a class="navbar-brand">{{::info.name}}</a>
	        </div>

        <div id="navbar" class="collapse navbar-collapse">
	          <ul class="nav navbar-nav">
		            <li ng-class="{active:$state.is('home')}">	<a ui-sref="home">Home</a></li>
		            <li ng-class="{active:$state.is('addEmp')}"><a ui-sref="addEmp">Add Employee</a></li>
	          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <!-- Begin page content -->
    <div class="container-fluid row page-container">
	      <!-- client site routing starts in here -->
	      <ui-view ng-cloak></ui-view>
    </div>


    <!-- Sticky footer -->
    <footer class="footer">
      <div class="container">
        <p class="text-muted">Build with <strong><%= title %></strong></p>
      </div>
    </footer>

    	

    	<!-- build:js -->
    	<!-- Loading jquery before angular so that angular will use jQuery instead of jQlite -->
    	<script type="text/javascript" src="vender/jquery/dist/jquery.js"></script>
        <!-- Angular libs -->
        <script type="text/javascript" src="vender/angular/angular.js"></script>
        <script type="text/javascript" src="vender/angular-filter/dist/angular-filter.js"></script>
        <script type="text/javascript" src="vender/angular-ui-router/release/angular-ui-router.js"></script>
        
        <!-- Bootstrap files -->        
        <script type="text/javascript" src="vender/bootstrap/dist/js/bootstrap.js"></script>
        
        <!-- Application specific *.js files -->        
        <script type="text/javascript" src="javascripts/app.routes.js"></script>
        <script type="text/javascript" src="javascripts/app.ctrl.js"></script>

        <!-- Employee management application module files -->
        <script type="text/javascript" src="javascripts/employee_component/employee-list.module.js"></script>
        <script type="text/javascript" src="javascripts/employee_component/dataset.service.js"></script>
		<script type="text/javascript" src="javascripts/employee_component/employee-list.ctrl.js"></script>
		<script type="text/javascript" src="javascripts/employee_component/add-edit-employee.ctrl.js"></script>

        <script type="text/javascript" src="javascripts/app.module.js"></script> 
        <!-- endbuild -->

    </body>
</html>




